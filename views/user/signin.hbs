<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-header bg-dark text-white font-weight-bold">
                Login
            </div>

            <div class="card-body">
                <form action="/user/signin" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name='email' placeholder="please insert your email"
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name='password' placeholder="please insert your password"
                            class="form-control">
                    </div>
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button type='submit' class=" btn btn-success ml-auto">Sing In</button>
                </form>

            </div>

            <div class="card-footer bg-white">
                {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{#each messages }}
                    <p>{{this}}</p>
                    {{/each}}
                </div>

                {{/if}}
            </div>
        </div>
    </div>
</div>